//http://stackoverflow.com/questions/5767325/remove-specific-element-from-an-array

var mongoose = require("mongoose");

var orderSchema = mongoose.Schema({
	number: Number,
	ingredients: [String],
});

catSchema.methods.add_ingredient = function(ingredient) {
	ingredients.push(ingredient);
};
catSchema.methods.remove_ingredient = function(ingredient) {
	var index = ingredients.indexOf(ingredient);
	if (index > -1) {
		ingredients.splice(index,1);
	}
};

module.exports = mongoose.model('Order', orderSchema);
